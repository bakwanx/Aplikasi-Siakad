<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".Overview">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/farhan"/>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="0dp">
            <TextView
                android:text="Overview"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama      : "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Nim         : "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Fakultas : "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Jurusan : "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Prodi       : "/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tampilnama"
                        android:layout_height="wrap_content"
                        android:text="Farhan Fadhilah"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tampilnim"
                        android:layout_marginTop="10dp"
                        android:text="180535632532"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tampilfakultas"
                        android:layout_marginTop="10dp"
                        android:text="Teknik"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tampiljurusan"
                        android:layout_marginTop="10dp"
                        android:text="Teknik Elektro"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tampilprodi"
                        android:layout_marginTop="10dp"
                        android:text="Informatika"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="Matakuliah yang diambil"
                    android:layout_marginLeft="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:text="Semester"
                    android:id="@+id/tvsemester"
                    android:layout_marginLeft="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:stretchColumns="0,1,2"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:layout_marginTop="60dp">
                <TableRow
                    android:background="#ffffff">
                    <TextView
                        android:layout_column="0"
                        android:text="No"
                        android:padding="2dp" />
                    <TextView
                        android:layout_column="1"
                        android:text="Matakuliah"
                        android:padding="3dip"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:text="SKS"
                        android:layout_column="2"
                        android:padding="3dip" />
                </TableRow>
                <TableRow
                    android:background="#ffffff">
                    <TextView
                        android:layout_column="0"
                        android:text="1"
                        android:padding="2dp" />
                    <TextView
                        android:layout_column="1"
                        android:id="@+id/tvmatkul1"
                        android:padding="3dip"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:id="@+id/tvsks1"
                        android:layout_column="2"
                        android:padding="3dip" />
                </TableRow>
                <TableRow
                    android:background="#ffffff">
                    <TextView
                        android:layout_column="0"
                        android:text="2"
                        android:padding="2dp" />
                    <TextView
                        android:layout_column="1"
                        android:id="@+id/tvmatkul2"
                        android:padding="3dip"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:id="@+id/tvsks2"
                        android:layout_column="2"
                        android:padding="3dip" />
                </TableRow>
                <TableRow
                    android:background="#ffffff">
                    <TextView
                        android:layout_column="0"
                        android:text="3"
                        android:padding="2dp" />
                    <TextView
                        android:layout_column="1"
                        android:id="@+id/tvmatkul3"
                        android:padding="3dip"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:id="@+id/tvsks3"
                        android:layout_column="2"
                        android:padding="3dip" />
                </TableRow>
                <TableRow
                    android:background="#ffffff">
                    <TextView
                        android:layout_column="0"
                        android:text="4"
                        android:padding="2dp" />
                    <TextView
                        android:layout_column="1"
                        android:id="@+id/tvmatkul4"
                        android:padding="3dip"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:id="@+id/tvsks4"
                        android:layout_column="2"
                        android:padding="3dip" />
                </TableRow>
                <TableRow
                    android:background="#ffffff">
                    <TextView
                        android:layout_column="0"
                        android:text="5"
                        android:padding="2dp" />
                    <TextView
                        android:layout_column="1"
                        android:padding="3dip"
                        android:id="@+id/tvmatkul5"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:id="@+id/tvsks5"
                        android:layout_column="2"
                        android:padding="3dip" />
                </TableRow>
                <TableRow
                    android:background="#ffffff">
                    <TextView
                        android:layout_column="0"
                        android:padding="2dp"
                        android:text="6"/>
                    <TextView
                        android:layout_column="1"
                        android:padding="3dip"
                        android:id="@+id/tvmatkul6"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:id="@+id/tvsks6"
                        android:layout_column="2"
                        android:padding="3dip" />
                </TableRow>
                <TableRow
                    android:background="#ffffff">
                    <TextView
                        android:layout_column="0"
                        android:text="7"
                        android:padding="2dp" />
                    <TextView
                        android:layout_column="1"
                        android:padding="3dip"
                        android:id="@+id/tvmatkul7"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:id="@+id/tvsks7"
                        android:layout_column="2"
                        android:padding="3dip" />
                </TableRow>
                <TableRow
                    android:background="#ffffff">
                    <TextView
                        android:layout_column="1"
                        android:text="Total SKS yang Diambil"
                        android:padding="3dip"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:id="@+id/tvtotal"
                        android:layout_column="2"
                        android:padding="3dip" />
                </TableRow>
            </TableLayout>

        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:onClick="pindahkrs"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Ubah / Tambah"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:fontFamily="@font/google_sans_medium" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>